    <RelativeLayout
        android:id="@+id/relate_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">


        <TextView
            android:id="@+id/text_mart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-66dp"
            android:layout_marginTop="58dp"
            android:layout_toEndOf="@+id/img_splash"
            android:fontFamily="@font/gothamrounded_bold"
            android:text="Mart"
            android:textColor="#1EA824"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/img_splash"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:src="@drawable/apple_logo_bg_removed" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_mart_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relate_splash"
        android:layout_marginTop="-15dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/gothamrounded_bold"
        android:text="     Online Grocery Mega Store"
        android:textColor="@color/darkGrey"
        android:textSize="12sp" />



</RelativeLayout>

