<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <TextView
        android:id="@+id/text_rate_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_extrabold"
        android:text="rate us"
        android:textColor="@color/mediumBlack"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_rate_question"
        android:layout_below="@id/text_rate_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="how did you like apple mart ?"
        android:textSize="14sp"
        android:textColor="@color/darkGrey"
        android:fontFamily="@font/nunito_semibold" />

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/close" />

    <LinearLayout
        android:layout_below="@id/text_rate_question"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/product_image_border"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/unliked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/unliked"/>

            <TextView
                android:id="@+id/text_meh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="meh ?"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/darkGrey"
                android:fontFamily="@font/nunito_semibold" />
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/product_image_border"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/liked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/liked"/>
            <TextView
                android:id="@+id/text_loved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="loved it ?"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/darkGrey"
                android:fontFamily="@font/nunito_semibold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>