<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/relate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/lite_color_primary"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/productImg"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/productOfferText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extrabold"
                android:paddingStart="5dp"
                android:paddingEnd="3dp"
                android:text="15%\nOFF"
                android:background="@drawable/green_offer"
                android:textAlignment="textStart"
                android:textColor="@color/mediumBlack"
                android:textSize="10sp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/relate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:elevation="5dp"
        android:background="@drawable/btn_bg_ban"
        android:layout_marginTop="-25dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_centerHorizontal="true">


            <ImageView
                android:id="@+id/minus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:src="@drawable/minus"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/mediumBlack"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_extrabold"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:src="@drawable/add"/>


    </LinearLayout>

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relate1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/proxima_nova"
        android:maxLength="15"
        android:text="Ratnagiri Alphonso"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/productShortDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/proxima_nova"
        android:maxLength="20"
        android:text="4 pieces(0.8kg-1kg)"
        android:textColor="@color/mediumBlack"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/actualFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productShortDes"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="₹400"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fakeFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productShortDes"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/actualFee"
        android:fontFamily="@font/nunito_bold"
        android:text="₹400"
        android:textColor="@color/darkGrey"
        android:textSize="10sp"
        android:textStyle="bold" />

</RelativeLayout>